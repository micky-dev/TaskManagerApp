</head>
<body>
    <div class="container-fluid">
        <%- include('../partials/navbar.ejs') %>
        <div class="search">
            <% if (renderSearch) { %>
                <%- include('../partials/search') %> 
                <% } %>
            </div>
            <%- body%>
        <%- include('../partials/footer.ejs') %>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
        const textContainer = document.querySelector('#textContainer')
        const statusBtn = document.querySelector('#status-btn')

        function translateTC(textContainer){
            window.onload = function(){
                textContainer.style.transition = '0.6s'
                textContainer.style.translate = ('50px','-600px')
                
            }
        }
        translateTC(textContainer)
        const authWelcome = document.querySelector('#authWelcome')
        const buttonSwipe = document.querySelector('#swipe').addEventListener('click', (event) => {
            authWelcome.style.translate = ('-29.1vw')
            authWelcome.style.backgroundColor = 'white'
            window.history.pushState({},'','/sign-up');
            event.target.style.display = 'none'
            const element = document.querySelector('#swipe-1')
            element.style.display = 'flex'
            element.style.justifyContent = 'center'
            element.style.alignItems = 'center'
            
        })
        const buttonswipe1 = document.querySelector('#swipe-1').addEventListener('click', () => {
            authWelcome.style.translate = ('0')
            authWelcome.style.backgroundColor = '#1D482F'
            event.target.style.display = 'none'
            const element = document.querySelector('#swipe')
            element.style.display = 'flex'
            element.style.justifyContent = 'center'
            element.style.alignItems = 'center'
        })
        })
    </script>
</body>
